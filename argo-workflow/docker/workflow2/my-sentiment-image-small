FROM python:3.10-slim

RUN pip install --no-cache-dir transformers
RUN pip install --no-cache-dir torch==2.0.0+cpu -f https://download.pytorch.org/whl/cpu/torch_stable.html

COPY train_model_small.py /app/train_model_small.py
COPY data.txt /app/data.txt
RUN rm -rf /root/.cache/pip
WORKDIR /app

ENTRYPOINT ["python", "train_model_small.py"]
